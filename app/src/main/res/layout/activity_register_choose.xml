            <include layout="@layout/content_main"
                android:layout_height="wrap_content"
                android:layout_width="300dp"
                android:layout_marginTop="30dp"

                />

<!--            <com.example.pro.customspinner.MaterialSpinner-->
<!--                android:layout_marginTop="30dp"-->
